<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:FileStrider.MauiApp.ViewModels"
        xmlns:models="using:FileStrider.Core.Models"
        x:Class="FileStrider.MauiApp.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="{Binding Title}"
        Icon="/Assets/avalonia-logo.ico"
        Width="1000" Height="700"
        MinWidth="800" MinHeight="600">
    
    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="🗂️ FileStrider" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,5"/>
            <TextBlock Text="Big File and Folder Discovery Tool" 
                       FontSize="14" 
                       HorizontalAlignment="Center"
                       Foreground="Gray"/>
        </StackPanel>

        <!-- Scan Configuration -->
        <Border Grid.Row="1" 
                BorderBrush="LightGray" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="15" 
                Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Path Selection -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Scan Path:" Margin="0,0,0,5"/>
                <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,0,10,0">
                    <TextBox Text="{Binding SelectedPath}" 
                             Width="400" 
                             IsReadOnly="True"
                             VerticalAlignment="Center"/>
                    <Button Content="Browse..." 
                            Command="{Binding SelectFolderCommand}"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Quick Actions -->
                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="🔍 Quick Scan" 
                            Command="{Binding QuickScanCommand}"
                            Margin="0,0,10,0"
                            Background="DodgerBlue"
                            Foreground="White"
                            Padding="15,5"/>
                    <Button Content="▶️ Start Scan" 
                            Command="{Binding StartScanCommand}"
                            Background="Green"
                            Foreground="White"
                            Padding="15,5"/>
                </StackPanel>

                <!-- Options -->
                <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,15,0,0">
                    <TextBlock Text="Top N:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <NumericUpDown Value="{Binding TopN}" 
                                   Minimum="1" Maximum="200" 
                                   Width="80" 
                                   Margin="0,0,20,0"/>
                    
                    <CheckBox IsChecked="{Binding IncludeHidden}" 
                              Content="Include Hidden" 
                              Margin="0,0,20,0"/>
                    
                    <TextBlock Text="Min Size (bytes):" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <NumericUpDown Value="{Binding MinFileSize}" 
                                   Minimum="0" 
                                   Width="100"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Results Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Files -->
            <Border Grid.Column="0" 
                    BorderBrush="LightGray" 
                    BorderThickness="1" 
                    CornerRadius="5" 
                    Margin="0,0,5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="🔥 Largest Files" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Margin="10,10,10,5"/>
                    
                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding TopFiles}"
                             Margin="5">
                        <ListBox.ItemTemplate>
                            <DataTemplate x:DataType="models:FileItem">
                                <Grid Margin="5" ToolTip.Tip="{Binding FullPath}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Row="0" 
                                               Text="{Binding Name}" 
                                               FontWeight="Bold"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Grid.Row="1" 
                                               FontSize="10"
                                               Foreground="Gray">
                                        <Run Text="Size: "/>
                                        <Run Text="{Binding Size, StringFormat='N0'}"/>
                                        <Run Text=" bytes | Modified: "/>
                                        <Run Text="{Binding LastModified, StringFormat='yyyy-MM-dd HH:mm'}"/>
                                    </TextBlock>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Folders -->
            <Border Grid.Column="1" 
                    BorderBrush="LightGray" 
                    BorderThickness="1" 
                    CornerRadius="5" 
                    Margin="5,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="📁 Largest Folders" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Margin="10,10,10,5"/>
                    
                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding TopFolders}"
                             Margin="5">
                        <ListBox.ItemTemplate>
                            <DataTemplate x:DataType="models:FolderItem">
                                <Grid Margin="5" ToolTip.Tip="{Binding FullPath}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Row="0" 
                                               Text="{Binding Name}" 
                                               FontWeight="Bold"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Grid.Row="1" 
                                               FontSize="10"
                                               Foreground="Gray">
                                        <Run Text="Size: "/>
                                        <Run Text="{Binding RecursiveSize, StringFormat='N0'}"/>
                                        <Run Text=" bytes | Items: "/>
                                        <Run Text="{Binding ItemCount, StringFormat='N0'}"/>
                                        <Run Text=" | Modified: "/>
                                        <Run Text="{Binding LastModified, StringFormat='yyyy-MM-dd HH:mm'}"/>
                                    </TextBlock>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" 
                BorderBrush="LightGray" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="10" 
                Margin="0,15,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="{Binding ScanStats}" FontWeight="Bold"/>
                    <TextBlock Text="{Binding CurrentPath}" 
                               FontSize="10" 
                               Foreground="Gray"
                               IsVisible="{Binding IsScanning}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="❌ Cancel" 
                            Command="{Binding CancelScanCommand}"
                            IsVisible="{Binding CanCancel}"
                            Background="Red"
                            Foreground="White"
                            Margin="0,0,10,0"/>
                    
                    <Button Content="📄 Export CSV" 
                            Command="{Binding ExportToCsvCommand}"
                            IsEnabled="{Binding HasResults}"
                            Margin="0,0,5,0"/>
                    
                    <Button Content="📝 Export JSON" 
                            Command="{Binding ExportToJsonCommand}"
                            IsEnabled="{Binding HasResults}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>