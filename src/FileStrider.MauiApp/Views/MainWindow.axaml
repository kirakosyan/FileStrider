<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:FileStrider.MauiApp.ViewModels"
        xmlns:models="using:FileStrider.Core.Models"
        xmlns:controls="using:FileStrider.MauiApp.Controls"
        xmlns:local="using:FileStrider.MauiApp.Controls"
        x:Class="FileStrider.MauiApp.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="{Binding Title}"
        Width="1200" Height="700"
        MinWidth="1000" MinHeight="600">
    
    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="🗂️ FileStrider" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,5"/>
            <TextBlock Text="{Binding AppSubtitle}" 
                       FontSize="14" 
                       HorizontalAlignment="Center"
                       Foreground="Gray"/>
        </StackPanel>

        <!-- Scan Configuration -->
        <Border Grid.Row="1" 
                BorderBrush="LightGray" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="15" 
                Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Path Selection -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding ScanPathLabel}" Margin="0,0,0,5"/>
                <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Margin="0,0,10,0">
                    <TextBox Text="{Binding SelectedPath}" 
                             Width="400" 
                             IsReadOnly="True"
                             VerticalAlignment="Center"/>
                    <Button Content="{Binding BrowseLabel}" 
                            Command="{Binding SelectFolderCommand}"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Quick Actions -->
                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="{Binding QuickScanLabel}" 
                            Command="{Binding QuickScanCommand}"
                            Margin="0,0,10,0"
                            Background="DodgerBlue"
                            Foreground="White"
                            Padding="15,5"/>
                    <Button Content="{Binding StartScanLabel}" 
                            Command="{Binding StartScanCommand}"
                            Background="Green"
                            Foreground="White"
                            Padding="15,5"/>
                </StackPanel>

                <!-- Options -->
                <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,15,0,0">
                    <TextBlock Text="{Binding TopNLabel}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <NumericUpDown Value="{Binding TopN}" 
                                   Minimum="1" Maximum="200" 
                                   Width="80" 
                                   Margin="0,0,20,0"/>
                    
                    <CheckBox IsChecked="{Binding IncludeHidden}" 
                              Content="{Binding IncludeHiddenLabel}" 
                              Margin="0,0,20,0"/>
                    
                    <CheckBox IsChecked="{Binding FoldersOnly}" 
                              Content="{Binding FoldersOnlyLabel}" 
                              ToolTip.Tip="{Binding FoldersOnlyTooltip}"
                              Margin="0,0,20,0"/>
                    
                    <TextBlock Text="{Binding MinSizeLabel}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <NumericUpDown Value="{Binding MinFileSize}" 
                                   Minimum="0" 
                                   Width="100"
                                   Margin="0,0,20,0"/>
                    
                    <TextBlock Text="{Binding LanguageLabel}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox ItemsSource="{Binding AvailableLanguages}"
                              SelectedItem="{Binding SelectedLanguage}"
                              Width="120">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding FlagEmoji}" Margin="0,0,5,0"/>
                                    <TextBlock Text="{Binding NativeName}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Results Area -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Top Row: Files and Folders -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Files -->
                <Border Grid.Column="0" 
                        BorderBrush="LightGray" 
                        BorderThickness="1" 
                        CornerRadius="5" 
                        Margin="0,0,2.5,5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="{Binding LargestFilesLabel}" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Margin="10,10,10,5"/>
                    
                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding TopFiles}"
                             Margin="5">
                        <ListBox.ItemTemplate>
                            <DataTemplate x:DataType="models:FileItem">
                                <Grid Margin="5" 
                                      ToolTip.Tip="{Binding FullPath}"
                                      DoubleTapped="FileItem_DoubleTapped">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Row="0" 
                                               Text="{Binding Name}" 
                                               FontWeight="Bold"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Grid.Row="1" 
                                               FontSize="10"
                                               Foreground="Gray">
                                        <Run Text="Size: "/>
                                        <Run Text="{Binding Size, StringFormat='N0'}"/>
                                        <Run Text=" bytes | Modified: "/>
                                        <Run Text="{Binding LastModified, StringFormat='yyyy-MM-dd HH:mm'}"/>
                                    </TextBlock>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

                <!-- Folders -->
                <Border Grid.Column="1" 
                        BorderBrush="LightGray" 
                        BorderThickness="1" 
                        CornerRadius="5" 
                        Margin="2.5,0,2.5,5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="{Binding LargestFoldersLabel}" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Margin="10,10,10,5"/>
                    
                    <ListBox Grid.Row="1" 
                             ItemsSource="{Binding TopFolders}"
                             Margin="5">
                        <ListBox.ItemTemplate>
                            <DataTemplate x:DataType="models:FolderItem">
                                <Grid Margin="5" 
                                      ToolTip.Tip="{Binding FullPath}"
                                      DoubleTapped="FolderItem_DoubleTapped">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Grid.Row="0" 
                                               Text="{Binding Name}" 
                                               FontWeight="Bold"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Grid.Row="1" 
                                               FontSize="10"
                                               Foreground="Gray">
                                        <Run Text="Size: "/>
                                        <Run Text="{Binding RecursiveSize, StringFormat='N0'}"/>
                                        <Run Text=" bytes | Items: "/>
                                        <Run Text="{Binding ItemCount, StringFormat='N0'}"/>
                                        <Run Text=" | Modified: "/>
                                        <Run Text="{Binding LastModified, StringFormat='yyyy-MM-dd HH:mm'}"/>
                                    </TextBlock>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

                <!-- File Type Statistics -->
                <Border Grid.Column="2"
                        BorderBrush="LightGray"
                        BorderThickness="1"
                        CornerRadius="5"
                        Margin="2.5,0,0,5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="{Binding FileTypeBreakdownLabel}"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="10,10,10,5"/>

                        <ListBox Grid.Row="1"
                                 ItemsSource="{Binding FileTypeStatistics}"
                                 Margin="5"
                                 BorderThickness="0"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListBox.ItemTemplate>
                            <DataTemplate x:DataType="models:FileTypeStats" x:CompileBindings="False">
                                <StackPanel Margin="5" Spacing="4">
                                    <DockPanel>
                                        <TextBlock Text="{Binding Category}" FontWeight="Bold" DockPanel.Dock="Left"/>
                                        <TextBlock Text="{Binding Percentage, StringFormat='{}{0:F1}%'}" DockPanel.Dock="Right" Foreground="Gray"/>
                                    </DockPanel>
                                    <ProgressBar Minimum="0" Maximum="100" Value="{Binding Percentage}" Height="6"/>
                                    <TextBlock FontSize="10" Foreground="Gray">
                                        <Run Text="{Binding DataContext.ItemsLabel, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                        <Run Text=" "/>
                                        <Run Text="{Binding FileCount, StringFormat='{}{0:N0}'}"/>
                                        <Run Text="  |  "/>
                                        <Run Text="{Binding DataContext.SizeLabel, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                        <Run Text=" "/>
                                        <Run Text="{Binding TotalSize, StringFormat='{}{0:N0}'}"/>
                                        <Run Text=" "/>
                                        <Run Text="{Binding DataContext.BytesLabel, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                        <Run Text="  |  "/>
                                        <Run Text="{Binding DataContext.AverageSizeLabel, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                        <Run Text=" "/>
                                        <Run Text="{Binding AverageSize, StringFormat='{}{0:N0}'}"/>
                                        <Run Text=" "/>
                                        <Run Text="{Binding DataContext.BytesLabel, RelativeSource={RelativeSource AncestorType=Window}}"/>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>

            </Grid>
            
            <!-- Bottom Row: Treemap Visualization -->
            <Grid Grid.Row="1">
                <Border BorderBrush="LightGray" 
                        BorderThickness="1" 
                        CornerRadius="5" 
                        Margin="0,5,0,0">
                    <StackPanel Spacing="10" Margin="10">
                        <TextBlock Text="{Binding DiskUsageVisualizationLabel}" 
                                   FontWeight="Bold" 
                                   FontSize="16"/>
                        
                        <local:TreemapControl Items="{Binding TreemapItems}" 
                                              MinHeight="300"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" 
                BorderBrush="LightGray" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="10" 
                Margin="0,15,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="{Binding ScanStats}" FontWeight="Bold"/>
                    <TextBlock Text="{Binding CurrentPath}" 
                               FontSize="10" 
                               Foreground="Gray"
                               IsVisible="{Binding IsScanning}"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="{Binding CancelLabel}" 
                            Command="{Binding CancelScanCommand}"
                            IsVisible="{Binding CanCancel}"
                            Background="Red"
                            Foreground="White"
                            Margin="0,0,10,0"/>
                    
                    <Button Content="{Binding ExportCsvLabel}" 
                            Command="{Binding ExportToCsvCommand}"
                            IsEnabled="{Binding HasResults}"
                            Margin="0,0,5,0"/>
                    
                    <Button Content="{Binding ExportJsonLabel}" 
                            Command="{Binding ExportToJsonCommand}"
                            IsEnabled="{Binding HasResults}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
